<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_activities_item"
    android:padding="15dp"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/textView_title"
        style="@style/Demo_Mode_TitleBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evento"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_pictures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_pictures" />

    <ImageView
        android:id="@+id/imageView_pictures"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/offer_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>